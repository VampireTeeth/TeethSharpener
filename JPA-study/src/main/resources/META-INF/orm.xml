<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
	http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
	version="2.0">
	<persistence-unit-metadata>
		<xml-mapping-metadata-complete/>
	</persistence-unit-metadata>
	<package>com.steventk.jpastudy</package>
	
	
	<entity class="Category">
		<table name="CATEGORY"/>
		<pre-persist method-name="updateTimestamps"/>
		<pre-update method-name="updateTimestamps"/>
		<attributes>
			<id name="id">
				<generated-value strategy="AUTO"/>
			</id>
			<basic name="lastModified">
				<temporal>TIMESTAMP</temporal>
			</basic>
		</attributes>
	</entity>
	<entity class="User">
		<attributes>
			<id name="id">
				<column name="USER_ID"/>
				<generated-value strategy="AUTO"/>
			</id>
			<basic name="firstName">
				<column length="20"/>
			</basic>
			<basic name="lastName">
				<column length="20"/>
			</basic>
			<embedded name="homeAddress">
				<attribute-override name="street">
					<column name="HOME_STREET"/>
				</attribute-override>
				<attribute-override name="zipcode">
					<column name="HOME_ZIP_CODE"/>
				</attribute-override>
				<attribute-override name="city">
					<column name="HOME_CITY"/>
				</attribute-override>
			</embedded>
			
			<embedded name="billingAddress">
				<attribute-override name="street">
					<column name="BILLING_STREET"/>
				</attribute-override>
				<attribute-override name="zipcode">
					<column name="BILLING_ZIP_CODE"/>
				</attribute-override>
				<attribute-override name="city">
					<column name="BILLING_CITY"/>
				</attribute-override>
			</embedded>
		</attributes>
	</entity>
</entity-mappings>